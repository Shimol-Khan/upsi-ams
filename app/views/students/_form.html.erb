<%= simple_form_for(@student) do |f| %>
  <% if @student.errors.any? %>
    <p><%= pluralize(@student.errors.count, "Errors")%></p>
    <ul>
        <%= @student.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
  <% end %>

  <div class="form-inputs">
    <%= f.input :user_id,:as => :hidden %>
    <%= f.input :matric_id,label: "Matric ID"%>
    <%= f.input :name %>
    <%= f.association :faculty %>
    <%= f.association :program %>

    <label>Status</label><br>
    <%= f.select :student_status,["Active","Not-Active"],prompt:"Select Student Status"%>
    <br><br>

    <label>Study Level</label><br>
    <%= f.select :study_level,["Diploma","Degree","Masters","PHD"],prompt:"Select Study Level" %>
    <br><br>

    <label>Current Semester</label><br>
    <%= f.select :current_semester,["1","2","3","4","5","6","7","8"],prompt:"Select Semester" %>
    <br><br>

    <label>Student Type</label><br>
    <%= f.select :student_type,["Malaysian","Non-Malaysian"],prompt:"Select Student Type" %>
    <br><br>

    <label>College</label><br>
    <%= f.select :college,["KAB","KUO","KHAR","Taman Bahtera","Others"],prompt:"Select College" %>
    <br><br>

    <%= f.input :ic_number %>
    <%= f.input :passport_number %>
    <%= f.input :permanent_address ,input_html:{rows:6}%>
    <%= f.input :current_address ,input_html:{rows:6}%>

    <label>Country</label><br>
    <%= f.country_select :country %>
    <br><br>

    <label>Gender</label><br>
    <%= f.select :gender,["Male","Female"],prompt:"Select Student's Gender" %>
    <br><br>

    <%= f.input :date_of_birth, as: :date, start_year: Date.today.year - 44,
                              end_year: Date.today.year - 18, discard_day: false,
                              order: [:month,:day,:year] %>
    <%= f.input :mobile_number %>

    <label>Blood Group</label><br>
    <%= f.select :blood_type,["O+","O-","A+","A-","B+","B-","AB+","AB-"],prompt:"Select Blood Group"%>
    <br><br>

    <label>Race</label><br>
    <%= f.select :race,["Malay","Chinese","Indian","Peninsula Malaysia","Sabah","Kadazan Dusun","Bajau","Murut","Sarawak","Iban","Bidayuh","Melanau","Orang Ulu","Others"],prompt:"Select Race" %>
    <br><br>
    <label>Religion</label><br>
    <%= f.select :religion,["Islam","Christian","Buddhist","Hindu","Others"],prompt:"Select Religion"%>
    <br><br>

    <label>Marital Status</label><br>
    <%= f.select :marital_status,["Single","Married"],prompt:"Select marital status"%>
    <br><br>

    <label>Bank</label><br>
    <%= f.select :bank,["May Bank","Bank Islam"],prompt:"Select bank"%>
    <br><br>

    <%= f.input :bank_account %>
    <%= f.input :sponsor %>
    <%= f.input :siswa_email %>
    <%= f.input :personal_email %>
    <%= f.input :cgpa_1,label:"Semester-01 CGPA" %>
    <%= f.input :cgpa_2,label:"Semester-02 CGPA" %>
    <%= f.input :cgpa_3 ,label:"Semester-03 CGPA"%>
    <%= f.input :cgpa_4,label:"Semester-04 CGPA" %>
    <%= f.input :cgpa_5 ,label:"Semester-05 CGPA"%>
    <%= f.input :cgpa_6 ,label:"Semester-06 CGPA"%>
    <%= f.input :cgpa_7 ,label:"Semester-07 CGPA"%>
    <%= f.input :cgpa_8 ,label:"Semester-08 CGPA"%>
  </div>

  <div class="form-actions" style="padding-bottom: 5px">
    <%= f.button :submit,:class=>"btn btn-danger btn-block"%>
  </div>
<% end %>